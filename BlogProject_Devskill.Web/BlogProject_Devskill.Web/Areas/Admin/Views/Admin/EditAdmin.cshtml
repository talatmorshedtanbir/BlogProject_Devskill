@model BlogProject_Devskill.Web.Areas.Admin.Models.AdminControl.EditAdminModel

@{
    ViewData["Title"] = "Create SMTP";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h3>Edit Admin</h3>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Create New Admin</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="content pt-0">

        <div class="card">

            <div class="card-body">
                <partial name="_ActionMessage" model="@Model.Response" />
                <div class="">
                    <form asp-action="EditAdmin" asp-controller="Admin" asp-area="Admin" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <fieldset class="mb-3">

                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Id">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row">
                                    <div class="col-md-6 border-right p-2">

                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4 required" asp-for="FullName"></label>
                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" asp-for="FullName">
                                                <span asp-validation-for="FullName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4 required" asp-for="Email"></label>
                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" asp-for="Email">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4" asp-for="PhoneNumber"></label>
                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" asp-for="PhoneNumber">
                                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4" asp-for="Gender"></label>
                                            <div class="col-lg-8">

                                                <select asp-for="Gender" class="form-control">
                                                    @if (@Model.Gender != null)
                                                    {
                                                        @if (@Model.Gender.Equals("Male"))
                                                        {
                                                            <option value="Male" selected>Male</option>
                                                            <option value="Female">Female</option>
                                                        }
                                                        else if (@Model.Gender.Equals("Female"))
                                                        {
                                                            <option value="Female" selected>Female</option>
                                                            <option value="Male">Male</option>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <option value="">--- Select Gender ---</option>
                                                        <option value="Male">Male</option>
                                                        <option value="Female">Female</option>
                                                    }

                                                </select>
                                                <span asp-validation-for="Gender" class="text-danger"></span>
                                            </div>
                                        </div>



                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4" asp-for="Address"></label>
                                            <div class="col-lg-8">
                                                <textarea type="text" class="form-control" asp-for="Address"></textarea>
                                                <span asp-validation-for="Address" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4" asp-for="ProfileImage"></label>
                                            <div class="col-md-10">
                                                <input type="file" asp-for="ProfileImage" />
                                                <span asp-validation-for="ProfileImage" class="text-danger"></span>
                                            </div>
                                           
                                        </div>

                                    </div>

                                </div>

                            </fieldset>
                        </div>
                        <div class="">
                            <div class="d-flex justify-content-between">
                                <a asp-controller="Dashboard" asp-action="Index" asp-area="Admin" class="btn btn-light"><i class="icon-arrow-left52"></i> Back</a>
                                <button type="submit" class="btn bg-blue ml-2"><i class="icon-file-check2"></i> Save</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
    @section PageScripts
{
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    }
