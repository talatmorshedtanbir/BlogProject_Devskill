
@{
    ViewData["Title"] = "Index";
}

<!-- Content area -->
<div class="content-wrapper">
    <div class="user_welcome">
        <h3 class="user_welcome_title">Dashboard</h3>
    </div>
    <div class="content-main">

        <div class="row">
            <div class="col-12">
                <div class="card text-center card-box-shadow">
                    <div class="card-body">
                        <i class="icon-users4 icon-2x text-primary border-primary border-3 rounded-round p-3 mb-3"></i>
                        <a asp-controller="Admin" asp-action="Index" asp-area="Admin" class="btn bg-success-400"><i class="icon-eye"></i> <b>View Current Admins</b></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card text-center card-box-shadow">
                    <div class="card-body">
                        <i class="icon-users4 icon-2x text-primary border-primary border-3 rounded-round p-3 mb-3"></i>
                        <a asp-controller="Admin" asp-action="AddAdmin" asp-area="Admin" class="btn bg-success-400"><i class="icon-eye"></i> <b>Add New Admin</b></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card text-center card-box-shadow">
                    <div class="card-body">
                        <i class="icon-users4 icon-2x text-primary border-primary border-3 rounded-round p-3 mb-3"></i>
                        <a asp-controller="BlogPost" asp-action="Index" asp-area="Admin" class="btn bg-success-400"><i class="icon-eye"></i> <b>View Current Posts</b></a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- /content area -->
